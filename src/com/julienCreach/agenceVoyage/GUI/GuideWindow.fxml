<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="795" prefWidth="810" spacing="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.julienCreach.agenceVoyage.GUI.guideWindowController">
    <!-- MenuBar -->
    <MenuBar prefHeight="25" BorderPane.alignment="CENTER">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="menuItemQuit" mnemonicParsing="false" onAction="#menuItemQuitClick" text="Quit" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!--Zone detail de l'accompagnateur-->
    <TitledPane collapsible="false" text="Contact details :">
        <HBox spacing="200">
            <VBox spacing="15">
                <HBox spacing="5">
                    <VBox spacing="5">
                        <Label text="First name :" />
                        <TextField fx:id="textFieldFirstName" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="150" promptText="First name" />
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Last name :" />
                        <TextField fx:id="textFieldLastName" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="150" promptText="Last name" />
                    </VBox>
                </HBox>

                <VBox spacing="5">
                    <Label text="Phone number :" />
                    <TextField fx:id="textFieldPhoneNumber" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="150" promptText="Phone number" />
                </VBox>

                <HBox spacing="15">
                    <VBox spacing="5">
                        <Label text="N° :" />
                        <TextField fx:id="textFieldStreetNumber" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="75" promptText="N°" />
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Street :" />
                        <TextField fx:id="textFieldStreet" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="150" promptText="Street" />
                    </VBox>
                </HBox>

                <HBox spacing="15">
                    <VBox spacing="5">
                        <Label text="Post code :" />
                        <TextField fx:id="textFieldPostalCode" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="75" promptText="Post code" />
                    </VBox>

                    <VBox spacing="5">
                        <Label text="City :" />
                        <TextField fx:id="textFieldCity" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25" prefWidth="150" promptText="City" />
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="15">
                <ImageView>
                    <image>
                        <Image url="@../../ressources/images/defaultProfilePicture.png" />
                    </image>
                </ImageView>

                <Button fx:id="butValidModif" onAction="#butValidModifClick" prefHeight="25" prefWidth="110" text="Save changes">
                    <graphic>
                        <ImageView fitHeight="15" fitWidth="15">
                            <image>
                                <Image url="@../../ressources/images/check-500.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <HBox spacing="5">
                    <Button fx:id="butApplyJob" onAction="#butApplyJobClick" prefHeight="25" prefWidth="110" text="Apply circuit">
                        <graphic>
                            <ImageView fitHeight="15" fitWidth="15">
                                <image>
                                    <Image url="@../../ressources/images/add-528.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>

                    <Button fx:id="butDelete" onAction="#butDeleteClick" prefHeight="25" prefWidth="140" text="Cancel mission">
                        <graphic>
                            <ImageView fitHeight="15" fitWidth="15">
                                <image>
                                    <Image url="@../../ressources/images/delete-500.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

        </HBox>
    </TitledPane>

    <!--Modele des Circuits-->
    <Label prefHeight="25" text="Circuits :">
      <padding>
         <Insets left="15.0" />
      </padding>
    </Label>
    <TableView fx:id="tableViewCircuits" editable="false" maxWidth="-Infinity" prefWidth="800.0">
        <columns>
            <TableColumn prefWidth="50" text="id">
                <cellValueFactory><PropertyValueFactory property="_idCircuit" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="125" text="Name">
                <cellValueFactory><PropertyValueFactory property="_nameCircuit" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75" text="Places">
                <cellValueFactory><PropertyValueFactory property="_places" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75" text="Prix">
                <cellValueFactory><PropertyValueFactory property="_prix" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="125" text="Depart">
                <cellValueFactory><PropertyValueFactory property="_dateDepart" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="125" text="Arrivee">
                <cellValueFactory><PropertyValueFactory property="_dateFin" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75" text="Open ?">
                <cellValueFactory><PropertyValueFactory property="_open" /></cellValueFactory>
            </TableColumn>
<!--            <TableColumn prefWidth="125" text="Id accompagnateur">
                <cellValueFactory><PropertyValueFactory property="_idAccompagnateur" /></cellValueFactory>
            </TableColumn>-->
        </columns>
        <VBox.margin>
            <Insets left="5.0" />
        </VBox.margin>
    </TableView>
</VBox>
