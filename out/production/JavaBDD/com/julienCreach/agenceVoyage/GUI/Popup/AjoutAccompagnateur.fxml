        <VBox spacing="5" prefWidth="150">
            <TextField fx:id="textFieldName" prefHeight="25" prefWidth="100" promptText="Nom" />
            <TextField fx:id="textFieldPrenom" prefHeight="25" prefWidth="100" promptText="Prenom" />
            <TextField fx:id="textFieldTelephone" prefHeight="25" prefWidth="100" promptText="Telephone" />
            <TextField fx:id="textFieldNumRue" prefHeight="25" prefWidth="100" promptText="NumÃ©ro de rue" />
