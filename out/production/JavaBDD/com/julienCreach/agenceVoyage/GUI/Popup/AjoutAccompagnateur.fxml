    <padding><Insets left="5.0" top="15.0" /></padding>
    <HBox spacing="5">
        <VBox spacing="5">
            <Label prefHeight="25" text="Nom : " />
            <Label prefHeight="25" text="Prenom : " />
            <Label prefHeight="25" text="Telephone : " />
            <Label prefHeight="25" text="Numero de rue : " />
