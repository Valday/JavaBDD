<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>

<VBox prefHeight="290" prefWidth="320" spacing="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.valday.agenceVoyage.GUI.Popup.ajoutReservationController">
<padding><Insets left="5.0" top="15.0" /></padding>
<HBox spacing="5">
    <VBox spacing="5">
        <Label prefHeight="25" text="Client : " />
        <Label prefHeight="25" text="Accompte : " />
        <Label prefHeight="25" text="Second paiement : " />
        <Label prefHeight="25" text="Montant accompte : " />
        <Label prefHeight="25" text="Montant second paiement : " />
        <Label prefHeight="25" text="Date reservation : " />
        <Label prefHeight="25" text="Date limite : " />
        <Label prefHeight="25" text="Circuit : " />
    </VBox>

    <VBox spacing="5" prefWidth="150">
        <ComboBox fx:id="comboBox_client" prefHeight="25" prefWidth="150"/>
        <CheckBox fx:id="checkBox_accompteOk" prefHeight="25" />
        <CheckBox fx:id="checkBox_secondPaiementOk" prefHeight="25" />
        <TextField fx:id="textField_montantAccompte" prefHeight="25" prefWidth="100" promptText="Montant accompte"/>
        <TextField fx:id="textField_montantSecondPaiement" prefHeight="25" prefWidth="150" promptText="Montant second paiement"/>
        <DatePicker fx:id="datePicker_reservation" prefHeight="25" prefWidth="150" />
        <DatePicker fx:id="datePicker_limite" prefHeight="25" prefWidth="150" />
        <ComboBox fx:id="comboBox_circuit" prefHeight="25" prefWidth="150" />
    </VBox>
</HBox>

<VBox spacing="35">
    <HBox alignment="CENTER" spacing="5">
        <Button fx:id="but_Valider" onAction="#but_ValiderClick" prefHeight="25" prefWidth="75" text="Valider" />
        <Button fx:id="but_cancel" onAction="#but_AnnulerClick" prefHeight="25" prefWidth="75" text="Annuler" />
    </HBox>
</VBox>
</VBox>