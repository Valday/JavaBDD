<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="170" prefWidth="260" spacing="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.valday.agenceVoyage.GUI.Popup.ajoutCircuitController">
    <padding><Insets left="5.0" top="15.0" /></padding>
    <HBox spacing="5">
        <VBox spacing="5">
            <Label prefHeight="25" text="Nom : " />
            <Label prefHeight="25" text="Places : " />
            <Label prefHeight="25" text="Date de départ : " />
            <Label prefHeight="25" text="Date d'arrivée" />
        </VBox>

        <VBox spacing="5" prefWidth="150">
            <TextField fx:id="textField_name" prefHeight="25" prefWidth="100" promptText="name" />
            <TextField fx:id="textField_placeDispo" prefHeight="25" prefWidth="100" />
            <DatePicker fx:id="datePick_depart" prefHeight="25" prefWidth="150" />
            <DatePicker fx:id="datePick_arrivee" prefHeight="25" prefWidth="150" />
        </VBox>
    </HBox>

    <VBox spacing="35">
        <HBox alignment="CENTER" spacing="5">
            <Button fx:id="but_Valider" prefHeight="25" prefWidth="75" text="Valider" />
            <Button fx:id="but_cancel" onAction="#but_AnnulerClick" prefHeight="25" prefWidth="75" text="Annuler" />
        </HBox>
    </VBox>
</VBox>
